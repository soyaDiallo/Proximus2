								</div>
							</div>
						</a>
						<!--end::Item-->
						<!--begin::Item-->
						<a href="#" class="navi-item">
							<div class="navi-link rounded">
								<div class="symbol symbol-50 mr-3">
									<div class="symbol-label">
										<i class="flaticon2-supermarket text-warning icon-lg"></i>
