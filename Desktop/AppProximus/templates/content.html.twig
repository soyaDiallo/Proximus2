					<i class="symbol-badge bg-success"></i>
				</div>
				<div class="d-flex flex-column">
					<a href="{{ path('profile_index') }}" class="font-weight-bold font-size-h5 text-dark-75 text-hover-primary">{{ app.user.nom|capitalize|slice(0, 9) }}
