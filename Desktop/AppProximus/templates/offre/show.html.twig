{% extends 'base.html.twig' %}

{% block title %}Offre{% endblock %}

{% block body %}
    <h1>Offre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offre.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ offre.code }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ offre.dateCreation ? offre.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateSignature</th>
                <td>{{ offre.dateSignature ? offre.dateSignature|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NumOpportunite</th>
                <td>{{ offre.numOpportunite }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ offre.commentaire }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('offre_index') }}">back to list</a>

    <a href="{{ path('offre_edit', {'id': offre.id}) }}">edit</a>

    {{ include('offre/_delete_form.html.twig') }}
{% endblock %}
