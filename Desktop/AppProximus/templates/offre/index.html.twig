{% extends 'base.html.twig' %}

{% block title %}Offre index{% endblock %}

{% block body %}
    <h1>Offre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>DateCreation</th>
                <th>DateSignature</th>
                <th>NumOpportunite</th>
                <th>Commentaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for offre in offres %}
            <tr>
                <td>{{ offre.id }}</td>
                <td>{{ offre.code }}</td>
                <td>{{ offre.dateCreation ? offre.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ offre.dateSignature ? offre.dateSignature|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ offre.numOpportunite }}</td>
                <td>{{ offre.commentaire }}</td>
                <td>
                    <a href="{{ path('offre_show', {'id': offre.id}) }}">show</a>
                    <a href="{{ path('offre_edit', {'id': offre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('offre_new') }}">Create new</a>
{% endblock %}
